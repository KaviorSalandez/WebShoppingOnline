    @* đây là thư viên js cho quản lí ảnh *@
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            //hiển thị form dialog để quản lí và chọn ảnh khác
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: "true",
                height: '550',
                width: '700',
                resizable: true,
                title: 'Quản lí ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });

           

                $('body').on("click", "#imgproduct", function () {
                    var proid = $(this).attr("data-id");
                    $("#dialog #myIframe").attr("src", "/Admin/ProductImage/Index?productId="+proid);
                    $('#dialog').dialog('open');
                    return false;
                });






            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkBox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkBox.each(function () {
                    if (this.checked) {
                        checkBox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkBox.attr('selected', '');
                    }
                });
                //alert(str);
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa nhứng bản ghi này không ?");
                    if (conf === true) {
                        // ở đây sẽ dùng ajax
                        $.ajax({
                            url: '/Admin/Product/DeleteAll',
                            type: 'Post',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    //load lại trang
                                    location.reload();
                                }
                            }

                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                // alert("ok chưa");
                // khai báo 1 biến để check trạng thái của thằng này
                var checkStatus = this.checked;
                //alert(checkStatus);
                var checkBox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkBox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkBox.attr('selected', 'checked');
                    } else {
                        checkBox.attr('selected', '');
                    }
                });
            });

            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn có muốn xóa bản ghi này không?");
                if (conf === true) {
                    $.ajax({
                        url: '/Admin/Product/Delete',
                        type: 'Post',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });

