        // kích hoạt hiển thị ở trang home bằng Ajax
        $(document).ready(function () {
            $('body').on('click', '.btnHome', function (e) {
                e.preventDefault();
                debugger
                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/Admin/Product/ChangeIsHome',
                    type: 'Post',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isHome) {
                                btn.html("<i class='fa fa-check text-success'></i>")
