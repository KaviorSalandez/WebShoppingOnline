@model IEnumerable<WebShoppingOnline.Models.EF.Product>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {

        <div class="owl-item product_slider_item">
            <div class="product-item">
                <div class="product discount">
                    <div class="product_image">
                        <img src="@item.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" alt="">
                    </div>
                    <div class="favorite favorite_left"></div>
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                    <div class="product_info">
                        <h6 class="product_name"><a href="/detail/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                        @if (item.PriceSale > 0)
                        {


                            <div class="product_price">@WebShoppingOnline.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WebShoppingOnline.Common.Common.FormatNumber(item.Price, 0)</span></div>

                        }
                        else
                        {
                            <div class="product_price">@WebShoppingOnline.Common.Common.FormatNumber(item.Price,0)</div>

                        }
                    </div>
                </div>
            </div>
        </div>
    }


}
