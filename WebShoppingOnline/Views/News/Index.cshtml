@model PagedList.PagedList<WebShoppingOnline.Models.EF.New>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 200px;
    }

    .title-news {
        font-size: 40px;
        border-bottom: 1px solid #ff0000;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">
                Tin tức
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="row row_item">
                        <div class="col-md-4">
                            <div class="img-box">
                                <a href="" title="@item.Title">
                                    <img src="@item.Image" alt="@item.Title" width="370" height="270" />
                                </a>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="content-box">
                                <h3><a href="/@item.Alias-new@(item.Id)" title="@item.Title">@item.Title</a></h3>
                                <div class="description-box">
                                    @item.Description
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
            }
            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-7" style="text-align:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>


